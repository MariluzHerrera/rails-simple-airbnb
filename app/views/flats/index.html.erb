<h1>All our flats (<%= @flats.size %>)</h1>


<% @flats.each do |flat| %>
<div class='col-4'>
  <div class="flat-card">
    <div class="flat-card-content">
      <div class="flat-card-title"></div>
    <h4><%= flat.name %></h4>
      </div>
    <div class="flat-card-address">
    <p><%= flat.address %></p>
    </div>
    <div class="flex">
      <div class="flex">
        <i class="fas fa-user-friends mr-2"></i>
        <span><%= flat.number_of_guests %></span>
      </div>
      <div class="flex ml-3">
        <i class="fas fa-euro-sign mr2"></i>
        <span><%= flat.price_per_night %></span>
      </div>
    </div>
    <div class="flat-card-actions">
      <%= link_to "More info", flat_path(flat) %>
      <%= link_to "Edit", edit_flat_path(flat) %>
      <%= link_to "Remove", flat_path(flat), method: :delete  %>
    </div>
    </div>
  </div>

<% end %>

